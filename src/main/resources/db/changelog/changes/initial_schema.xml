<?xml version="1.1" encoding="UTF-8" standalone="no"?>
<databaseChangeLog xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                   http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.4.xsd">

  <changeSet id="create-rtac-holding-table-001" author="Ivan_Zhunkivskyi">
    <preConditions>
      <not>
        <tableExists tableName="rtac_holding"/>
      </not>
    </preConditions>


    <createTable tableName="rtac_holding">
      <column name="instance_id" type="uuid">
        <constraints nullable="false"/>
      </column>
      <column name="type" type="varchar(20)">
        <constraints nullable="false"/>
      </column>
      <column name="id" type="uuid">
        <constraints nullable="false"/>
      </column>
      <column name="rtac_holding_json" type="jsonb">
        <constraints nullable="false"/>
      </column>
      <column name="created_at" type="timestamp" defaultValueComputed="CURRENT_TIMESTAMP">
        <constraints nullable="false"/>
      </column>
    </createTable>

    <addPrimaryKey tableName="rtac_holding" columnNames="instance_id,type,id" constraintName="pk_rtac_holding"/>

    <rollback>
      <dropTable tableName="rtac_holding"/>
    </rollback>
  </changeSet>

  <changeSet id="enable-pg_trgm-extension-001" author="Steve Ellis">
    <sql>
      CREATE EXTENSION IF NOT EXISTS "pg_trgm" WITH SCHEMA pg_catalog;
    </sql>
    <rollback>
      <sql>
        DROP EXTENSION "pg_trgm";
      </sql>
    </rollback>
  </changeSet>

  <changeSet id="create-rtac-holding-search-text-function-001" author="Steve Ellis">
    <sqlFile path="db/changelog/changes/create-rtac-search-function.sql"/>
    <rollback>
      <sql>
        DROP FUNCTION IF EXISTS rtac_holding_search_text(jsonb);
      </sql>
    </rollback>
  </changeSet>

  <changeSet id="create-rtac-holding-gin-index-001" author="Steve Ellis">
    <preConditions onFail="MARK_RAN">
      <not>
        <indexExists indexName="idx_rtac_holding_search_text_gin" tableName="rtac_holding"/>
      </not>
    </preConditions>
    <sql>
      CREATE INDEX idx_rtac_holding_search_text_gin ON rtac_holding USING gin (rtac_holding_search_text(rtac_holding_json) gin_trgm_ops);
    </sql>
    <rollback>
      <dropIndex indexName="idx_rtac_holding_search_text_gin" tableName="rtac_holding"/>
    </rollback>
  </changeSet>

  <changeSet id="create-rtac-holdings-multi-tenant-function-001" author="Steve Ellis">
    <sqlFile path="db/changelog/changes/create-rtac-holdings-multi-tenant-function.sql" splitStatements="false"/>
    <rollback>
      <sql>
        DROP FUNCTION IF EXISTS rtac_holdings_multi_tenant(text, uuid[]);
      </sql>
    </rollback>
  </changeSet>

  <changeSet id="create-rtac-pre-warming-job-table-002" author="Ivan_Zhunkivskyi">
    <preConditions>
      <not>
        <tableExists tableName="rtac_pre_warming_job"/>
      </not>
    </preConditions>
    <createTable tableName="rtac_pre_warming_job">
      <column name="id" type="uuid">
        <constraints primaryKey="true" nullable="false"/>
      </column>
      <column name="start_date" type="timestamp" defaultValueComputed="CURRENT_TIMESTAMP">
        <constraints nullable="false"/>
      </column>
      <column name="end_date" type="timestamp"/>
      <column name="status" type="varchar(32)">
        <constraints nullable="false"/>
      </column>
      <column name="error_message" type="text"/>
    </createTable>

    <rollback>
      <dropTable tableName="rtac_pre_warming_job"/>
    </rollback>
  </changeSet>

  <changeSet id="add-shared-field-to-rtac-holding-003" author="Ivan_Zhunkivskyi">
    <preConditions>
        <tableExists tableName="rtac_holding"/>
    </preConditions>


    <addColumn tableName="rtac_holding">
      <column name="shared" type="boolean" defaultValue="false"/>
    </addColumn>
  </changeSet>

  <changeSet id="add-rtac-holding-location-id-index" author="Illia-Borysenko_epam">
    <comment>Create index on rtac_holding_json location.id for bulk updates</comment>
    <sql>
      CREATE INDEX IF NOT EXISTS idx_rtac_holding_location_id
      ON rtac_holding ((rtac_holding_json->'location'->>'id'));
    </sql>
    <rollback>
      <sql>DROP INDEX IF EXISTS idx_rtac_holding_location_id;</sql>
    </rollback>
  </changeSet>

  <changeSet id="add-rtac-holding-library-id-index" author="Illia-Borysenko_epam">
    <comment>Create index on rtac_holding_json library.id for bulk updates</comment>
    <sql>
      CREATE INDEX IF NOT EXISTS idx_rtac_holding_location_id
      ON rtac_holding ((rtac_holding_json->'library'->>'id'));
    </sql>
    <rollback>
      <sql>DROP INDEX IF EXISTS idx_rtac_holding_library_id;</sql>
    </rollback>
  </changeSet>

  <changeSet id="update-rtac-holdings-multi-tenant-function-002" author="Ivan_Zhunkivskyi">
    <sqlFile path="db/changelog/changes/create-rtac-holdings-multi-tenant-function.sql" splitStatements="false"/>
    <rollback>
      <sql>
        DROP FUNCTION IF EXISTS rtac_holdings_multi_tenant(text, uuid[]);
      </sql>
    </rollback>
  </changeSet>

  <changeSet id="create-delete-old-holdings-all-tenants-function" author="Humoyun_Norboboev">
    <sqlFile path="db/changelog/changes/create-delete-old-holdings-all-tenants-function.sql" splitStatements="false"/>
    <rollback>
      <sql>
        DROP FUNCTION IF EXISTS public.delete_old_holdings_all_tenants(timestamp with time zone);
      </sql>
    </rollback>
  </changeSet>

  <changeSet id="update-rtac-holdings-multi-tenant-function-003" author="Ivan_Zhunkivskyi">
    <sqlFile path="db/changelog/changes/create-rtac-holdings-multi-tenant-function.sql" splitStatements="false"/>
    <rollback>
      <sql>
        DROP FUNCTION IF EXISTS rtac_holdings_multi_tenant(text, uuid[]);
      </sql>
    </rollback>
  </changeSet>
</databaseChangeLog>
