{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "description": "Piece resource event",
  "type": "object",
  "properties": {
    "id": {
      "description": "UUID of the event",
      "type": "string"
    },
    "action": {
      "description": "Action for piece (Create, Edit or Delete)",
      "type": "string",
      "$ref": "pieceEventAction.json"
    },
    "pieceId": {
      "description": "UUID of the piece",
      "type": "string"
    },
    "userId": {
      "description": "UUID of the user who performed the action",
      "type": "string"
    },
    "eventDate": {
      "description": "Date time when event triggered",
      "format": "date-time",
      "type": "string"
    },
    "actionDate": {
      "description": "Date time when piece action occurred",
      "format": "date-time",
      "type": "string"
    },
    "pieceSnapshot": {
      "description": "Full snapshot of the piece",
      "type": "object",
      "$ref": "../orders/piece.json"
    }
  },
  "additionalProperties": false
}
